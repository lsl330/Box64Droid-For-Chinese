echo "切换语言环境"
echo "1) 简体中文"
echo "2) 繁體中文"
echo "3) 日文"
echo "4) engligh"
echo -e ""
read lang
cd ~/
if [[ $lang == 1 ]]
then
	echo -e " 替换bashrc为简体中文环境"
	sed -i 's/[a-z][a-z]_[[A-Z][A-Z].UTF-8/zh_CN.UTF-8/g' $PREFIX/var/lib/proot-distro/installed-rootfs/ubuntu/root/.bashrc
 cp -f $PREFIX/var/lib/proot-distro/installed-rootfs/ubuntu/root/Chinese-LANG-Pack/locale-archive-cn $PREFIX/var/lib/proot-distro/installed-rootfs/ubuntu/usr/lib/locale/locale-archive
elif [[ $lang == 2 ]]
then
    echo -e " 替换bashrc为繁体中文环境"
	sed -i 's/[a-z][a-z]_[[A-Z][A-Z].UTF-8/zh_TW.UTF-8/g' $PREFIX/var/lib/proot-distro/installed-rootfs/ubuntu/root/.bashrc
 cp -f $PREFIX/var/lib/proot-distro/installed-rootfs/ubuntu/root/Chinese-LANG-Pack/locale-archive-tw $PREFIX/var/lib/proot-distro/installed-rootfs/ubuntu/usr/lib/locale/locale-archive
elif [[ $lang == 3 ]]
then
    echo -e " 替换bashrc为日文环境"
	sed -i 's/[a-z][a-z]_[[A-Z][A-Z].UTF-8/ja_JP.UTF-8/g' $PREFIX/var/lib/proot-distro/installed-rootfs/ubuntu/root/.bashrc
 cp -f $PREFIX/var/lib/proot-distro/installed-rootfs/ubuntu/root/Chinese-LANG-Pack/locale-archive-jp $PREFIX/var/lib/proot-distro/installed-rootfs/ubuntu/usr/lib/locale/locale-archive
elif [[ $lang == 4 ]]
then
    echo -e " 替换bashrc为英文环境"
	sed -i 's/[a-z][a-z]_[[A-Z][A-Z].UTF-8/en_US.UTF-8/g' $PREFIX/var/lib/proot-distro/installed-rootfs/ubuntu/root/.bashrc
 cp -f $PREFIX/var/lib/proot-distro/installed-rootfs/ubuntu/root/Chinese-LANG-Pack/locale-archive-en $PREFIX/var/lib/proot-distro/installed-rootfs/ubuntu/usr/lib/locale/locale-archive
else
    echo " 未知操作"
    clear
    lang
fi
echo " 语言环境切换成功"
