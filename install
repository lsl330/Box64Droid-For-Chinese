clear
echo -e " Box64Droid中文化补丁..."
echo -e " 补丁下载中"
wget https://github.com/lsl330/Box64Droid-For-Chinese/releases/download/Chinese-LANG-Pack/Chinese-LANG-Pack.tar.xz &>/dev/null
tar -xf Chinese-LANG-Pack.tar.xz
echo -e " 移动补丁到ubuntu目录"
mv Chinese-LANG-Pack /data/data/com.termux/files/usr/var/lib/proot-distro/installed-rootfs/ubuntu/root
echo -e " 复制字体文件"
cp -f $PREFIX/var/lib/proot-distro/installed-rootfs/ubuntu/root/Chinese-LANG-Pack/SimSun.ttc $PREFIX/var/lib/proot-distro/installed-rootfs/ubuntu/root/wine/share/wine/fonts/SimSun.ttc
cp -f $PREFIX/var/lib/proot-distro/installed-rootfs/ubuntu/root/Chinese-LANG-Pack/PMingLiU-TW.ttf $PREFIX/var/lib/proot-distro/installed-rootfs/ubuntu/root/wine/share/wine/fonts/PMingLiU-TW.ttf
cp -f $PREFIX/var/lib/proot-distro/installed-rootfs/ubuntu/root/Chinese-LANG-Pack/locale-archive $PREFIX/var/lib/proot-distro/installed-rootfs/ubuntu/usr/lib/locale/locale-archive
echo -e " 替换bashrc为中文环境"
sed -i 's/en_US/zh_CN/g' /data/data/com.termux/files/usr/var/lib/proot-distro/installed-rootfs/ubuntu/root/.bashrc
echo -e " 安装完成，请重新使用start-box运行游戏"
