clear
rm -f Chinese-LANG-Pack.tar.xz
echo -e " Box64Droid-chroot中文化补丁..."
echo -e " 本补丁除了中文环境外，还会包含一些额外的便捷功能"
echo -e " 补丁下载中"
wget -q --show-progress https://github.com/lsl330/Box64Droid-For-Chinese/releases/download/Chinese-LANG-Pack/Chinese-LANG-Pack.tar.xz
tar -xf Chinese-LANG-Pack.tar.xz
rm -f Chinese-LANG-Pack.tar.xz
echo -e " 移动补丁到ubuntu目录"
sudo rm -rf ~/ubuntu/root/Chinese-LANG-Pack
sudo mv -f Chinese-LANG-Pack ~/ubuntu/root/
echo -e " 复制字体文件"
sudo cp -f ~/ubuntu/root/Chinese-LANG-Pack/SimSun.ttc ~/ubuntu/root/wine/share/wine/fonts/SimSun.ttc
sudo cp -f ~/ubuntu/root/Chinese-LANG-Pack/PMingLiU-TW.ttf ~/ubuntu/root/wine/share/wine/fonts/PMingLiU-TW.ttf
sudo cp -f ~/ubuntu/root/Chinese-LANG-Pack/locale-archive-cn ~/ubuntu/usr/lib/locale/locale-archive
echo -e " 替换bashrc为中文环境"
sudo sed -i 's/en_US/zh_CN/g;s/zh_TW/zh_CN/g;s/ja_JP/zh_CN/g' ~/ubuntu/root/.bashrc
echo -e " 替换TFM为中文版"
sudo cp -f ~/ubuntu/root/Chinese-LANG-Pack/TFM.exe ~/ubuntu/opt/TFM.exe
echo -e " 起点位置添加快捷启动项" 
sudo cp -rf ~/ubuntu/root/Chinese-LANG-Pack/Shortcuts ~/ubuntu/opt
sudo cp -rf ~/ubuntu/opt/Shortcuts/* "~/ubuntu/root/.wine/drive_c/ProgramData/Microsoft/Windows/Start Menu"
sudo chmod o+rw ~/ubuntu/opt/tools/changewinever
if sudo cat ~/ubuntu/opt/tools/changewinever |grep 替换 > /dev/null
then
	echo -e " changewinever已更新，无需替换"
else
	echo -e " 下载changewinever替换文件"
  wget https://raw.githubusercontent.com/lsl330/Box64Droid-For-Chinese/main/modifychangewinever &>/dev/null
  echo -e " 更新changewinever"
  sudo cp -f ~/ubuntu/opt/tools/changewinever ~/changewinever
  sudo chmod o+rw ~/changewinever
  printf "%s\n" "/WINEDLLOVERRIDES/r modifychangewinever" w | ed -s ~/changewinever
  echo -e " 更新changewinever成功"
  rm -f modifychangewinever
  sudo chmod o-rw ~/changewinever
  sudo mv -f ~/changewinever ~/ubuntu/opt/tools/changewinever 
fi
echo -e " 下载语言环境切换文件"
wget https://raw.githubusercontent.com/lsl330/Box64Droid-For-Chinese/main/lang-root &>/dev/null
chmod +x lang-root 
sudo mv -f lang-root  $PREFIX/bin/lang-root
echo -e " 配置语言环境切换文件，以后在termux上运行lang-root即可切换语言环境"
echo -e " 安装完成，请重新使用start-box运行游戏"
rm -f install
